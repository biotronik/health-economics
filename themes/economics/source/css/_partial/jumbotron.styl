.jumbotron--home
    background url(https://res.cloudinary.com/binc/image/fetch/w_1920,h_1080/https://images.pexels.com/photos/325185/pexels-photo-325185.jpeg)
    background-position center
    background-size cover
    color blue
    border-radius 0
    margin-bottom 0

.jumbotron--ihear
    background url(https://res.cloudinary.com/binc/image/upload/f_auto,e_art:eucalyptus/v1537567268/web/banners/iHEAR_banner.jpg)
    background-position center
    background-size cover
    color #fff
    border-radius 0
    
.jumbotron__title
    display inline-block
    font-weight 700
    letter-spacing 3px
    margin 0
    padding 0
    line-height 3rem
    width 100%

.jumbotron__text
    letter-spacing 3px
    margin-top 1rem

.jumbotron__text-letter
    font-weight 900
    